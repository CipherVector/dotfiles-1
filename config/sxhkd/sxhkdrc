# Frenzy's
# SXHKD config

# --| Open Web Browser |-- #
super + w
    qutebrowser

# --| Open Terminal Emulator |-- #
super + Return
    alacritty

# --| Another Terminal |-- #
super + shift + Return
    kitty

# --| Open Book Reader |-- #
super + z
    zathura

# --| Emoji Menu |-- #
super + e
    sh ~/.scripts/menu/emoji.sh

# MPC boi
super + m: {p,n,b}
    mpc {play, next, back}

# --| Open File Manager -- #
super + shift + f
    alacritty -e ranger

# --| Set Window state |-- #
super + {d,shift + d,s,f}
	bspc node -t {tiled,pseudo_tiled,floating,fullscreen}

# --| Change Window State (part II) |-- #
super + @space
     bspc node -t {tiled,pseudo_tiled,floating,fullscreen}

# --| Set Node flags |-- #
super + a ; {m,s,l,p, i}
    bspc node -g {marked,sticky,locked,private, hidden}

# --| Unhide nodes |-- #
super + a ; alt + i
   bspc node {,$(bspc query -N -n .hidden | tail -n1)} -g hidden=off -f --follow

# --| Menu |-- #
super + d
    rofi -show drun

# --| Clear workspace |-- #
super + shift + s
    zsh ~/.scripts/pane/clear_workspace.sh

# --| Reload sxhkd |-- #
super + shift + r
    pkill -USR1 -x sxhkd && sh ~/.scripts/notification/reload.sh

# --| Open Eww |-- #
# super + shift + w
#    eww  

# --| Quit Menu (eww) |--
super + x
    rofi_run -l

# --| Quit or Reload BSPWM |-- #
super + alt + {q,r}
    bspc {quit,wm -r}

# --| Close and Kill |-- #
super + q
    bspc node -k

# --| Alternate between the tiled and monocle layout |-- #
super + shift + m
    bspc desktop -l next

# if the current node is automatic, send it to the last manual, otherwise pull the last leaf
super + y
    bspc query -N -n focused.automatic && bspc node -n last.!automatic || bspc node last.leaf -n focused

# --| Swap the current node and the biggest node |--
super + g
    bspc node -s biggest

# --| Rotate current node with the next leaf |--
super + r
    bspc node -n last.leaf -n focused -R 90

# --| Cropped Save |-- #
super + u
    sh ~/.scripts/notification/screenshot.sh -s save -m select

# --| Fullscreen Save |--#
super + shift + u
    sh ~/.scripts/notification/screenshot.sh -s save -m full

# --| Clipboard cropped |-- #
super + p
    sh ~/.scripts/notification/screenshot.sh -s clip -m select

# --| Clipboard Fullscreen |-- #
super + shift + p
    sh ~/.scripts/notification/screenshot.sh -s clip -m full

# --| Set Auto |-- #
super + ctrl + {a,s,d}
    bspc config automatic_scheme {longest_side,alternate,spiral}

# set the node flags
#super + ctrl + {x,y,z}
#    bspc node -g {locked,sticky,private}


# focus the node in the given direction
super + {_,shift + }{h,j,k,l}
    bspc node -{f,s} {west,south,north,east}

# focus the node for the given path jump
super + {p,b,comma,period}
    bspc node -f @{parent,brother,first,second}

# focus the next/previous node in the current desktop
super + {_,shift + }c
    bspc node -f {next,prev}.local

# focus the next/previous desktop in the current monitor
super + bracket{left,right}
    bspc desktop -f {prev,next}.local

# --| Focus the Last node/desktop |-- #
super + {grave,Tab}
    bspc {node,desktop} -f last

# focus the older or newer node in the focus history
super + {o,i}
    bspc wm -h off; \
    bspc node {older,newer} -f; \
    bspc wm -h on

# --| Focus or Send to the Given Desktop |-- #
super + {_,shift + }{1-9,0}
    bspc {desktop -f,node -d} '^{1-9,10}'

# --| Preselect Direction |-- #
super + ctrl + {h,j,k,l}
    bspc node -p {west,south,north,east}

# --| Preselect the Ratio |-- #
super + ctrl + {1-9}
    bspc node -o 0.{1-9}

# --| Cancel the preselection for the focused node |-- #
super + ctrl + space
    bspc node -p cancel

# --| Cancel the preselection for the focused desktop |-- #
super + ctrl + shift + space
    bspc query -N -d | xargs -I id -n 1 bspc node id -p cancel

# --| Resize Window - Outward |-- #
super + alt + {h,j,k,l}
    bspc node -z {left -20 0,bottom 0 20,top 0 -20,right 20 0}

# --| Resize Window Inward |-- #
super + alt + shift + {h,j,k,l}
    bspc node -z {right -20 0,top 0 20,bottom 0 -20,left 20 0}

# --| Move a floating window |-- #
super + {Left,Down,Up,Right}
    bspc node -v {-24 0,0 24,0 -24,24 0}

# --| Volume Control |-- #
XF86AudioMute
    sh ~/.scripts/notification/volume_pam.sh toggle
XF86AudioRaiseVolume
    sh ~/.scripts/notification/volume_pam.sh up
XF86AudioLowerVolume
    sh ~/.scripts/notification/volume_pam.sh down

# --| Brightness Control |-- #
XF86MonBrightnessUp
    sh ~/.scripts/notification/brightness.sh up
XF86MonBrightnessDown
    sh ~/.scripts/notification/brightness.sh down
